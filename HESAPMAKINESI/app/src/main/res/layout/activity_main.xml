<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hesapEkrani"
            android:layout_width="397dp"
            android:layout_height="204dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="5dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center_vertical|right"
            android:padding="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="75sp"
            android:verticalScrollbarPosition="right"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:layout_width="413dp"
            android:layout_height="60dp"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="409dp"
                android:layout_height="58dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/btnTopla"
                        android:layout_width="80dp"
                        android:layout_height="59dp"
                        android:text="+" />

                    <Button
                        android:id="@+id/btnCikar"
                        android:layout_width="80dp"
                        android:layout_height="59dp"
                        android:text="-" />

                    <Button
                        android:id="@+id/btnCarp"
                        android:layout_width="80dp"
                        android:layout_height="59dp"
                        android:text="*" />

                    <Button
                        android:id="@+id/btnBol"
                        android:layout_width="80dp"
                        android:layout_height="59dp"
                        android:text="/" />

                    <Button
                        android:id="@+id/btnEsittir"
                        android:layout_width="84dp"
                        android:layout_height="60dp"
                        android:text="=" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </TableLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="411dp"
            android:layout_height="61dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnSifirla"
                android:layout_width="410dp"
                android:layout_height="52dp"
                android:text="Ekranı Temizle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="414dp"
            android:layout_height="102dp"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="404dp"
                android:layout_height="93dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/btn0"
                        android:layout_width="66dp"
                        android:layout_height="45dp"
                        android:text="@string/_0"
                        tools:ignore="MissingConstraints" />

                    <Button
                        android:id="@+id/btn1"
                        android:layout_width="66dp"
                        android:layout_height="45dp"
                        android:text="1" />

                    <Button
                        android:id="@+id/btn2"
                        android:layout_width="66dp"
                        android:layout_height="45dp"
                        android:text="2" />

                    <Button
                        android:id="@+id/btn3"
                        android:layout_width="66dp"
                        android:layout_height="45dp"
                        android:text="3" />

                    <Button
                        android:id="@+id/btn4"
                        android:layout_width="66dp"
                        android:layout_height="45dp"
                        android:text="4" />

                    <Button
                        android:id="@+id/btn5"
                        android:layout_width="66dp"
                        android:layout_height="45dp"
                        android:text="5" />

                </TableRow>

                <TableRow
                    android:layout_width="363dp"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btn6"
                        android:layout_width="43dp"
                        android:layout_height="45dp"
                        android:text="6" />

                    <Button
                        android:id="@+id/btn7"
                        android:layout_width="43dp"
                        android:layout_height="45dp"
                        android:text="7" />

                    <Button
                        android:id="@+id/btn8"
                        android:layout_width="43dp"
                        android:layout_height="45dp"
                        android:text="8" />

                    <Button
                        android:id="@+id/btn9"
                        android:layout_width="43dp"
                        android:layout_height="45dp"
                        android:text="9" />

                    <Button
                        android:id="@+id/btnKare"
                        android:layout_width="52dp"
                        android:layout_height="51dp"
                        android:text="2*" />

                    <Button
                        android:id="@+id/btnKüp"
                        android:layout_width="52dp"
                        android:layout_height="51dp"
                        android:text="3*" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </TableLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>